{# print.html.twig #}

{# @param resume Resume #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Print.html</title>
    <link rel="stylesheet" href="{{ asset('build/main.css') }}" type="text/css" media="screen" title="no title" charset="utf-8">
  </head>
  <body>
    <div class="header grid-1">
      <h1 class="header__name col">{{ parameters.fullName }}</h1>
      <div class="header__contact col">
        {{ parameters.emailAddress }}
      </div>
    </div>

    <hr>

    <div class="about grid-1">
      <h2 class="about__title col">About</h2>
      <div class="about__content col">
        {{ resume.about }}
      </div>
    </div>
    <hr>

    <div class="experiences grid">
      <h2 class="experiences__title col-12">Experiences</h2>

      {% for experience in resume.experiences %}
        <div class="experience col-12 grid">
          <div class="experience__head col-3">
            <div class="experience__name">
              {{ experience.name }}
            </div>
            <div class="experience__company">
              {{ experience.company }}
            </div>
            <div class="experience__year">
              {{ experience.year }}
            </div>
          </div>
          <div class="experience__description col-9">
            {{ experience.description }}
          </div>
        </div>
      {% endfor %}
    </div>

    <hr>

    <div class="scholarship grid">
      <h2 class="scholarship__title col-12">Scholarship</h2>

      {% for graduation in resume.graduations %}
        <div class="graduation col-12 grid">
          <div class="graduation__head">
            <div class="graduation__name">
              {{ graduation.name }}
            </div>
            <div class="graduation__school">
              {{ graduation.school }}
            </div>
            <div class="graduation__year">
              {{ graduation.year }}
            </div>
          </div>   
        </div>
      {% endfor %}
    </div>

    <hr>
    <div class="projects grid">
      <h2 class="projects__title col-12">Projects</h2>

      {% for project in resume.sideProjects %}
        <div class="project col-12 grid">
          <div class="project__head col-3">
            <div class="project__name">
              {{ project.name }}
            </div>
          </div>   
          <div class="project__description col-9">
            {{ project.description }}
          </div>
        </div>
      {% endfor %}
    </div>
    <script src="{{ asset('build/main.js') }}"></script>
  </body>
</html>

